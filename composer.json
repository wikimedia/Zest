{
	"name": "wikimedia/zest-css",
	"description": "Fast, lightweight, extensible CSS selector engine for PHP",
	"keywords": [
		"css",
		"selector",
		"engine"
	],
	"license": "MIT",
	"homepage": "https://www.mediawiki.org/wiki/Zest",
	"authors": [
		{
			"name": "Christopher Jeffrey"
		},
		{
			"name": "C. Scott Ananian",
			"email": "cananian@wikimedia.org"
		}
	],
	"require": {
		"php": ">=7.2.0",
		"ext-mbstring": "*",
		"ext-xml": "*"
	},
	"suggest": {
		"ext-intl": "*"
	},
	"require-dev": {
		"jakub-onderka/php-parallel-lint": "1.0.0",
		"jakub-onderka/php-console-highlighter": "0.4.0",
		"mediawiki/mediawiki-codesniffer": "29.0.0",
		"mediawiki/mediawiki-phan-config": "0.9.0",
		"mediawiki/minus-x": "0.3.2",
		"ockcyp/covers-validator": "^1.1.0",
		"phpunit/phpunit": "^8.5",
		"wikimedia/remex-html": "2.0.2",
		"wikimedia/testing-access-wrapper": "~1.0"
	},
	"autoload": {
		"psr-4": {
			"Wikimedia\\Zest\\": "src/"
		}
	},
	"autoload-dev": {
		"psr-4": {
			"Wikimedia\\Zest\\Tests\\": "tests/"
		}
	},
	"scripts": {
		"test": [
			"parallel-lint . --exclude vendor",
			"phpunit",
			"@phan",
			"covers-validator",
			"phpcs -sp",
			"minus-x check ."
		],
		"cover": "phpunit --coverage-html coverage",
		"fix": [
			"minus-x fix .",
			"phpcbf"
		],
		"phan": "PHAN_DISABLE_XDEBUG_WARN=1 phan --allow-polyfill-parser"
	}
}
